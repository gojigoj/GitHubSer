<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubSer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="TextContentFullWidth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContentWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContentWrapContent.SmallTitle" parent="TextContentWrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="TextContentFullWidth.Num" parent="TextContentFullWidth">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextContentFullWidth.Space" parent="TextContentFullWidth">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="TextContentFullWidth.Space.SingleLine" parent="TextContentFullWidth.Space">
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomButton" parent="TextContentFullWidth">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:background">@drawable/bg_button_light</item>
    </style>

    <style name="CustomTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/blue_primary</item>
        <item name="tabTextColor">@color/black</item>
    </style>

    <style name="CustomViewBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/blue_primary</item>
    </style>

    <style name="CustomViewBackgroundItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_round_border_light</item>
    </style>

    <style name="CustomBtnChangeTheme" parent="TextContentWrapContent">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:background">@drawable/ic_dark_mode</item>
    </style>

    <style name="CustomBtnNext" parent="TextContentWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:src">@drawable/ic_next_light</item>
    </style>


</resources>